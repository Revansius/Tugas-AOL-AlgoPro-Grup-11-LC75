// STRUCT
struct Menu {
    int id;
    char nama[30];
    int harga;
    int stok;
};

struct KeranjangItem {
    char nama[39];
    int quantity;
    int subtotal;
};

struct KeranjangItem keranjang [50];
int keranjangCount = 0;
int totalPembayaran1 = 0;


struct Menu appetizer[5] = {
