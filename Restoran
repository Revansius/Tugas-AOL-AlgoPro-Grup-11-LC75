// sistem restoran
#include <stdio.h>

// STRUCT
struct appetizer{
	float harga;
	int stock;
};
struct Menu {
    char nama[30];
    int harga;
    int stok;
};

struct Menu mainCourse[5] = {
    {"Nasi Goreng", 50000, 10},
    {"Salted Egg Chicken", 65000, 10},
    {"Spaghetti Carbonara", 70000, 10},
    {"Beef Steak", 105000, 10},
    {"Chicken Katsu Curry", 80000, 10}
};

struct Menu beverages[5] = {
    {"Avochoco", 35000, 10},
    {"Lychee Tea", 25000, 10},
    {"Lemon Cocktail", 50000, 10},
    {"Biscoff Espresso", 45000, 10},
    {"Chocolate", 30000, 10}
};

struct Menu dessert[5] = {
    {"Burnt Cheesecake", 35000, 10},
    {"Choco Lava", 25000, 10},
    {"Panacotta", 20000, 10},
    {"Pancake Lotus Ice Cream", 40000, 10},
    {"Trio Ice Cream", 30000, 10}
};

// FUCNTION
void tampilMenu(struct Menu menu[], int jumlah, char judul[]) {
    printf("\n== %s ==\n", judul);
    printf("-------------------------------------------------------------\n");

    for (int i = 0; i < jumlah; i++) {
        printf("%-4d | %-25s | %-11d | %-5d\n",
               i + 1,
               menu[i].nama,
               menu[i].harga,
               menu[i].stok);
    }

    printf("-------------------------------------------------------------\n");

}


void appetizer(){
	//Data Harga,Stock,dan No utk menu appetizer
    struct appetizer GCB;
    struct appetizer FF;
    struct appetizer CW;
    struct appetizer O;
    struct appetizer S;
    //Garlic Chesse Bread
    GCB.harga = 20000;
    GCB.stock = 30;
    //FrenchFries
    FF.harga = 20000;
    FF.stock = 30;
    //ChickenWings
    CW.harga = 27000;
    CW.stock = 30;
    //Oyster
    O.harga = 35000;
    O.stock = 30;
    //Salad
    S.harga = 15000;
    S.stock = 30;
	
	printf("==APPETIZER==\n");
    printf ("1. Garlic Cheese Bread | Rp%.2f | %d\n", GCB.harga, GCB.stock);
    printf ("2. French Fries | Rp%.2f | %d\n", FF.harga, FF.stock);
    printf ("3. Chicken Wings | Rp%.2f | %d\n", CW.harga, CW.stock);
    printf ("4. Oyster | Rp%.2f | %d\n", O.harga, O.stock);
    printf ("5. Salad | Rp%.2f | %d\n", S.harga, S.stock);
}


void clear_stdin(){
    int c;
    while ((c == getchar()) != '\n' && c != EOF){

	}
}

// void meja(int *invalid, int *ok){
// }

void MenuUtama(){
	printf("Silahkan Pilih Jenis Menu yang Anda Ingin Pesan\n");
    printf("1. Appetizer\n");
    printf("2. Main Course\n");
    printf("3. Beverages\n");
    printf("4. Dessert\n");
    printf("5. Exit\n");
    printf("Choose : ");
}


void Display() {
    char nama[50], email[50];
    int people, meja;

    printf("==========================================\n");
    printf("      Selamat Datang di Trouville\n");
    printf("==========================================\n");

    printf("Nama          : \n");
    scanf("%s", nama);

    printf("Email         : \n");
    scanf("%s", email);

    printf("Jumlah Orang  : \n");
    scanf("%d", &people);

    printf("No Meja       : \n");
    scanf("%d", &meja);

    printf("==========================================\n");
}

// MAIN
int main(){
   
    
    int pilihMenu;
    Display();
    do {
        
        MenuUtama();
        scanf("%d", &pilihMenu);

        switch(pilihMenu){
            case 1: 
                appetizer();
                break;
            case 2:
                tampilMenu(mainCourse, 5, "MAIN COURSE");
                break;
            case 3:
                tampilMenu(beverages, 5, "BEVERAGES");
                break;
            case 4:
                tampilMenu(dessert, 5, "DESSERT");
                break;
            case 5:
                printf("Terim Kasih!\n");
            default:
                printf("Pilihan tidak valid!\n");

        }
    }while (pilihMenu != 5);

    int pesan;
    printf("Choose :");
    scanf("%d", &pesan);


    
    
    
    return 0;
}
